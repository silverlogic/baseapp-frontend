{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "skipLibCheck": true,
    "composite": false,
    "outDir": "tmp-dts",
    "target": "es2022"
  },
  "include": ["components", "hooks", "layouts", "providers", "styles", "utils", "tests"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.cy.tsx",
    "**/__tests__/**",
    "**/__storybook__/**"
  ]
}
