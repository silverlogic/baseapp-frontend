{
  "extends": "@baseapp-frontend/tsconfig/lib.json",
  "compilerOptions": {
    "types": ["node", "jest", "cypress"],
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".eslintrc.js",
    "*.ts",
    "*.tsx",
    "cypress.config.ts",
    "babel.config.js",
    "jest.config.ts",
    ".storybook/**/*",
    ".storybook/**/*.json"
  ],
  "references": [
    {
      "path": "./tsconfig.cypress.json"
    },
    {
      "path": "./tsconfig.jest.json"
    }
  ],
  "exclude": ["node_modules", "**/*.cy.ts", "**/*.cy.tsx", "**/*.test.ts", "**/*.test.tsx"]
}
